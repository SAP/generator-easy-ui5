{
  "name": "<%= projectname %>",
  "version": "0.0.1",
  "engines": {
    "node": "12.X"
  },
  "scripts": {
    "start": "ui5 serve -o index.html",
    "serve": "ui5 serve",
    "test": "run-s lint karma",
    "karma-ci": "karma start karma-ci.conf.js",
    "clearCoverage": "shx rm -rf coverage",
    "karma": "run-s clearCoverage karma-ci",
    "lint": "eslint .",
<% if(platform.indexOf('Cloud Foundry') !== -1){ -%>
    "build:mta": "mbt build",
    "deploy:cf": "cross-var cf deploy mta_archives/<%= projectname %>_$npm_package_version.mtar",
    "deploy": "run-s build:mta deploy:cf",
<% } else if(platform === 'Application Router @ SAP HANA XS Advanced'){ -%>
    "build:mta": "mbt build -p=xsa",
    "deploy:xs": "cross-var xs deploy mta_archives/<%=projectname%>_$npm_package_version.mtar",
    "deploy": "run-s build:mta deploy:xs",
<% } if(platform === 'Cloud Foundry HTML5 Application Repository' || platform === 'Fiori Launchpad on Cloud Foundry'){ -%>
    "build:ui": "ui5 build --clean-dest --include-task=generateManifestBundle --dest deployer/resources/webapp"
<% } else if(scss){ -%>
    "build:ui": "npm run scss:build && ui5 build <%=(ui5libs === 'Local resources (OpenUI5)') ? '--a':  '' %> --clean-dest --dest <%=(cordova) ? 'cordova_app/www':  'approuter/webapp' %>"
<% }  else { -%>
    "build:ui": "ui5 build <%=(ui5libs === 'Local resources (OpenUI5)' || ui5libs === 'Local resources (SAPUI5)') ? '--a':  '' %> --clean-dest --dest <%=(cordova) ? 'cordova_app/www':  'approuter/webapp' %>"
<% }  -%>
<% if(cordova){ -%>,
  "cordova:add-android": "(cd ./cordova_app/ && cordova platform add android && cd ..)",
  "cordova:run": "(cd ./cordova_app/ && cordova run --emulator && cd ..)",
  "cordova:build": "npm run build:ui && (cd ./cordova_app/ && cordova compile && cd ..)",
  "cordova:prepare": "npm run build:ui && (cd ./cordova_app/ && cordova prepare && cd ..)"
  <% }  -%>
<% if(scss){ -%>,
  "scss:build": "node-sass webapp/scss -o webapp/css",
  "scss:watch": "node-sass --watch webapp/scss -o webapp/css",
  "dev": "concurrently --kill-others \"npm run scss:watch\" \"npm run start\""
  <% }  -%>
  },
  "devDependencies": {
<% if(platform !== 'Static webserver'){ -%>
    "cross-var": "^1.1.0",
    "mbt": "1.0.14",
    "ui5-middleware-cfdestination": "^0.1.8",
<% } -%>
    "shx": "^0.3.2",
    "@ui5/cli": "^2.2.0",
    "ui5-middleware-livereload": "^0.2.0",
    "karma": "^5.0.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.2",
    "karma-ui5": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "http-proxy": "^1.18.0"
    <% if(scss){ -%>,
      "concurrently": "^5.1.0",
      "node-sass": "^4.13.1"
      <% }  -%>
  },
  "ui5": {
    "dependencies": [
<% if(platform !== 'Static webserver'){ -%>
      "ui5-middleware-cfdestination",
<% } -%>
      "ui5-middleware-livereload"
    ]
  }
}
